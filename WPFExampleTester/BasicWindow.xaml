<Window x:Class="WPFExampleTester.BasicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Views="clr-namespace:WPFExampleTester.Views"
        xmlns:local="clr-namespace:WPFExampleTester"
        mc:Ignorable="d"
        Title="BasicWindow"
        Height="650" Width="800" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Views:BasicView x:Name="ABook" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Center" />
        <Views:BasicView x:Name="BBook" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" />
        <Views:BasicView x:Name="CBook" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Center" />
    </Grid>
</Window>
